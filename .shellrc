# Load custom config
if [ -f ~/.shellrc.local.loadbefore ]; then
    export LOCAL_CONFIG_OVERRIDES="~/.shellrc.local.loadbefore:$LOCAL_CONFIG_OVERRIDES"
    source ~/.shellrc.local.loadbefore
fi

# Config alias
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

# Load aliases
if [ -f ~/.shell_aliases ]; then
  source ~/.shell_aliases
fi

# Set up LESS 
export LESS="-RXF"

# Set up FZF to use silver searcher (ag)
command -v ag > /dev/null && export FZF_DEFAULT_COMMAND='ag --follow --unrestricted --silent --filename-pattern ""'
command -v ag > /dev/null && export FZF_CTRL_T_COMMAND='ag --follow --unrestricted --silent --filename-pattern ""'
# Set up FZF to use ripgrep (rg)
command -v rg > /dev/null && export FZF_DEFAULT_COMMAND='rg --follow --files --no-messages -uuu'
command -v rg > /dev/null && export FZF_CTRL_T_COMMAND='rg --follow --files --no-messages -uuu'

# Set env if vim config overrides set
[ -f ~/.vimrc.local ] && export LOCAL_CONFIG_OVERRIDES="~/.vimrc.local:$LOCAL_CONFIG_OVERRIDES"
[ -f ~/.vimrc.local.loadbefore ] && export LOCAL_CONFIG_OVERRIDES="~/.vimrc.local.loadbefore:$LOCAL_CONFIG_OVERRIDES"

# Load custom config
if [ -f ~/.shellrc.local ]; then
    export LOCAL_CONFIG_OVERRIDES="~/.shellrc.local:$LOCAL_CONFIG_OVERRIDES"
    source ~/.shellrc.local
fi
