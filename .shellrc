# Config alias
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

# Load aliases
if [ -f ~/.shell_aliases ]; then
  source ~/.shell_aliases
fi

# Set up LESS 
export LESS="-RXF"

# Set up FZF to use silver searcher (ag)
command -v ag > /dev/null && export FZF_DEFAULT_COMMAND='ag --follow --hidden --ignore .git -g ""'
command -v ag > /dev/null && export FZF_CTRL_T_COMMAND='ag --follow --hidden --ignore .git -g ""'
# Set up FZF to use ripgrep (rg)
command -v rg > /dev/null && export FZF_DEFAULT_COMMAND='rg --follow --hidden --files'
command -v rg > /dev/null && export FZF_CTRL_T_COMMAND='rg --follow --hidden --files'
